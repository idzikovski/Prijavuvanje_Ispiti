<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/lblPrikaz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="Изберете предмети"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    
    <ListView
        android:id="@+id/lvPredmeti"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lblPrikaz"
        android:layout_marginTop="10dp" >
    </ListView>

    <Button
        android:id="@+id/btnPrijavi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lvPredmeti"
        android:onClick="prijaviIspiti"
        android:text="Пријави" />

</RelativeLayout>
